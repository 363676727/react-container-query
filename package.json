{
  "name": "react-container-query",
  "version": "0.4.2",
  "description": "Container Query for React Component",
  "author": "Daiwei Lu <daiweilu123@gmail.com> (http://daiwei.lu)",
  "main": "./lib/index.js",
  "jsnext:main": "./src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d6u/react-container-query.git"
  },
  "keywords": [
    "reactjs",
    "react",
    "react-component",
    "container-query",
    "element-query",
    "responsive"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d6u/react-container-query/issues"
  },
  "homepage": "https://github.com/d6u/react-container-query",
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "devDependencies": {
    "babel-cli": "6.10.1",
    "babel-core": "6.10.4",
    "babel-eslint": "6.1.0",
    "babel-loader": "6.2.4",
    "babel-plugin-__coverage__": "11.0.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-es2015-loose": "7.0.0",
    "babel-preset-react": "6.11.1",
    "classnames": "2.2.5",
    "eslint": "2.13.1",
    "eslint-config-rackt": "1.1.1",
    "eslint-plugin-react": "5.2.2",
    "istanbul-combine": "^0.3.0",
    "jasmine-core": "2.4.1",
    "karma": "1.1.0",
    "karma-babel-preprocessor": "6.0.1",
    "karma-chrome-launcher": "1.0.1",
    "karma-coverage": "1.0.0",
    "karma-jasmine": "1.0.2",
    "karma-sauce-launcher": "1.0.0",
    "karma-sourcemap-loader": "0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "1.7.0",
    "onchange": "2.5.0",
    "react": "15.1.0",
    "react-dom": "15.1.0",
    "rimraf": "2.5.2",
    "webpack": "1.13.1"
  },
  "scripts": {
    "clean": "rimraf lib dist coverage",
    "lint": "eslint src webpack.config.*",
    "watch:lint": "npm run lint -s; onchange -v 'src/**/*.js' 'webpack.config.*' -- npm run lint -s",
    "test": "npm run clean && env NODE_ENV=test karma start",
    "watch:test": "npm test -- --no-single-run",
    "coverage": "istanbul-combine -d coverage/summary -p both -r json -r html coverage/*-json/coverage-final.json",
    "check": "npm run lint && npm test && npm run coverage",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/react-container-query.js --config webpack.config.development.js",
    "build:umd:min": "webpack src/index.js dist/react-container-query.min.js --config webpack.config.production.js",
    "build:examples": "./scripts/build-examples.sh",
    "build": "npm run clean && npm run build:lib && npm run build:umd && npm run build:umd:min",
    "preversion": "npm run check",
    "postversion": "git push && git push --tags"
  }
}
