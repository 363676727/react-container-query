{
  "compileOnSaveDefinition": false,
  "compilerOptions": {
    "declaration": true,
    "diagnostics": false,
    "listFiles": false,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "lib",
    "pretty": true,
    "removeComments": true,
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "typings/index.d.ts",
    "typings-custom/element-resize-detector.d.ts",
    "typings-custom/invariant.d.ts",
    "typings-custom/lodash.d.ts",
    "src/index.ts"
  ]
}
